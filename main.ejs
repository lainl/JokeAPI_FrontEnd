<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Jokes</title>
  <style>
    body {
      background-color: yellow;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
    }
    .container {
      max-width: 600px;
      margin: 0 auto;
      text-align: center;
    }
    #jokeList {
      list-style: none;
      padding: 0;
      margin: 20px 0;
    }
    .joke-item {
      position: relative;
      background: white;
      margin: 10px 0;
      padding: 15px;
      border-radius: 5px;
      transition: background 0.3s;
    }
    .joke-item:hover {
      background: #f0f0f0;
    }
    .action-buttons {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      display: none;
    }
    .joke-item:hover .action-buttons {
      display: inline-block;
    }
    .action-buttons button {
      margin-left: 5px;
      padding: 5px 10px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }
    .action-buttons .edit {
      background-color: #4CAF50;
      color: white;
    }
    .action-buttons .delete {
      background-color: #f44336;
      color: white;
    }
    .add-button {
      margin-top: 30px;
    }
    .add-button a {
      text-decoration: none;
      font-size: 2em;
      background: #2196F3;
      color: white;
      width: 50px;
      height: 50px;
      line-height: 50px;
      text-align: center;
      border-radius: 50%;
      display: inline-block;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Jokes</h1>
    <ul id="jokeList">
      <!-- List of jokes will be inserted here -->
    </ul>
    <div class="add-button">
      <a href="/addJoke">+</a>
    </div>
  </div>

  <script>
    // Fetch all jokes from the API endpoint and render them
    async function fetchJokes() {
      try {
        const response = await fetch('https://backend-jokeapi.onrender.com/alljokes');
        if (!response.ok) {
          throw new Error('Failed to fetch jokes');
        }
        const jokes = await response.json();
        const jokeList = document.getElementById('jokeList');
        jokeList.innerHTML = '';
        jokes.forEach(joke => {
          const li = document.createElement('li');
          li.className = 'joke-item';
          li.innerHTML = `
            <span>${joke.joke}<br/><em>${joke.category}</em></span>
            <div class="action-buttons">
              <button class="edit" onclick="editJoke('${joke._id}')">Edit</button>
              <button class="delete" onclick="deleteJoke('${joke._id}')">Delete</button>
            </div>
          `;
          jokeList.appendChild(li);
        });
      } catch (error) {
        console.error(error);
      }
    }

    // Delete a joke by calling the API DELETE endpoint
    async function deleteJoke(id) {
      try {
        const response = await fetch(`https://backend-jokeapi.onrender.com/api/jokes/${id}`, {
          method: 'DELETE'
        });
        if (!response.ok) {
          throw new Error('Failed to delete joke');
        }
        // Refresh the list after deletion
        fetchJokes();
      } catch (error) {
        console.error(error);
      }
    }

    // Navigate to an edit page (assuming you have one implemented)
    function editJoke(id) {
      window.location.href = `/editJoke?jokeId=${id}`;
    }

    // Load jokes when the page is loaded
    fetchJokes();
  </script>
</body>
</html>
